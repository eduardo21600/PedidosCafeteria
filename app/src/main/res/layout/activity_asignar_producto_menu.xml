<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AsignarProductoMenu"
    android:background="@drawable/gradiente_fondo">

    <Button
        android:id="@+id/AgregarBotonProductoMenu"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bordes_redondos"
        android:text="Agregar Producto"
        android:textColor="#FAF8F8"
        app:layout_constraintEnd_toStartOf="@+id/recycleViewConsultarMenuPorducto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewConsultarMenuPorducto"
        android:layout_width="407dp"
        android:layout_height="529dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AgregarBotonProductoMenu" />

</androidx.constraintlayout.widget.ConstraintLayout>