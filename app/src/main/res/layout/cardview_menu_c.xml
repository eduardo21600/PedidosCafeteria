<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2F64C7CA"
    android:layout_margin="10sp"
    android:id="@+id/menu_card">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagen_menu_c"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="20sp"
        android:src="@drawable/user"
        android:layout_gravity="center_vertical"
        app:civ_border_color="#FBF6F6"
        app:civ_border_width="2dp"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/nombre_menu_c"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Nombre menu"
        android:layout_marginTop="5sp"/>
    <TextView
        android:id="@+id/descripcion_menu_c"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Descripcion"
        android:layout_marginTop="5sp"/>
    <TextView
        android:id="@+id/precio_menu_c"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Precio"
        android:layout_marginTop="5sp"/>

        <Button
            android:id="@+id/agregar_pedido"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/aÃ±adir_al_pedido"
            android:background="#3FDDCE"/>
    </TableLayout>


</LinearLayout>