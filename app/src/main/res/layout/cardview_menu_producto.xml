<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemMenuProductoEncargado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="#75A8BF"
        android:orientation="horizontal"
        app:cardBackgroundColor="#00FFFFFF">

        <LinearLayout
            android:id="@+id/listho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="$"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/productoprecio"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=" "
                        android:textSize="24sp" />
                </TableRow>

                <ImageView
                    android:id="@+id/imgProducto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/food" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/listv"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textIdProducto"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="TextView"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/textNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/baloo"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="#050505"
                        android:textSize="20sp" />
                </TableRow>

                <Button
                    android:id="@+id/btnModificarProducto"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/botonmodelo"
                    android:text="@string/botonModificar"
                    android:textColor="#F6FAF6" />

                <Button
                    android:id="@+id/btnEliminarProducto"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btnmodeloeliminar"
                    android:text="@string/botonEliminar"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>