<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#2F64C7CA"
    android:id="@+id/pedido_card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imagen_pedido_c"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/food"
        android:layout_margin="20dp"
        android:layout_alignParentLeft="true"/>

    <TableLayout
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_toRightOf="@id/imagen_pedido_c"
        android:layout_toLeftOf="@id/eliminar_pedido_c">

        <TextView
            android:id="@+id/nombre_pedido_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="Nombre producto" />

        <TextView
            android:id="@+id/cantidad_pedido_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="Cantidad" />

        <TextView
            android:id="@+id/subtotal_pedido_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="Subtotal" />

    </TableLayout>

    <ImageButton
        android:id="@+id/eliminar_pedido_c"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/delete"
        android:layout_margin="20dp"
        android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>