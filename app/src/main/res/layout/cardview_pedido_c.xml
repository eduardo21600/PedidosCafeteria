<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#2F64C7CA"
    android:id="@+id/pedido_card">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagen_pedido_c"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/food"
        android:layout_margin="10dp"
        app:civ_border_color="#FBF6F6"
        app:civ_border_width="2dp"
        android:layout_gravity="center"/>

    <TableLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/nombre_pedido_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Nombre producto" />

        <TextView
            android:id="@+id/cantidad_pedido_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Cantidad" />

        <TextView
            android:id="@+id/subtotal_pedido_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Subtotal" />

    </TableLayout>

        <ImageButton
            android:id="@+id/chat_pedido_c"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/chat"
            android:layout_gravity="center"/>

    <ImageButton
        android:id="@+id/eliminar_pedido_c"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/delete"
        android:layout_gravity="center"/>

</LinearLayout>