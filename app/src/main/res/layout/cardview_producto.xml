<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listaProducto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/listho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:background="#0078A1B3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="$"
                    android:textColor="#000000"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/productoprecio"
                    android:layout_width="65dp"
                    android:layout_height="53dp"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text=" "
                    android:textSize="24sp" />
            </TableRow>

            <ImageView
                android:id="@+id/imgProducto"
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/food" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/listv"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textIdProducto"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="TextView"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/textDescripcionProducto"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/textNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/baloo"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="#FAF7F7"
                    android:textSize="18sp" />
            </TableRow>

            <Button
                android:id="@+id/btnModificarProducto"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/botonmodelo"
                android:text="@string/botonModificar"
                android:textColor="#F6FAF6" />

            <Button
                android:id="@+id/btnEliminarProducto"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btnmodeloeliminar"
                android:gravity="center"
                android:text="@string/botonEliminar"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>